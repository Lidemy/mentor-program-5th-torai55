<!DOCTYPE html>
<html lang="zh">
  <%- include('./templates/head') %>
  <body>
    <%- include('./templates/nav') %>

    <main class="backend-pannel">
      <div class="pannel__content container-lg">
        <ul class="nav nav-pills" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="prize-tab" data-bs-toggle="tab" data-bs-target="#prize" type="button" role="tab" aria-controls="prize" aria-selected="true">Prize</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="menu-tab" data-bs-toggle="tab" data-bs-target="#menu" type="button" role="tab" aria-controls="menu" aria-selected="false">Menu</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="faq-tab" data-bs-toggle="tab" data-bs-target="#faq" type="button" role="tab" aria-controls="faq" aria-selected="false">Faq</button>
          </li>
          <div class="ms-5 mt-2">點兩下編輯</div>
        </ul>

        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="prize" role="tabpanel" aria-labelledby="prize-tab">
            <div class="prizes row row-cols-1 row-cols-sm-2 row-cols-lg-3">
              <div class="col">
                <div class="prize card">
                  <!-- <img src="/static/images/2.png" class="prize-image card-img-top" alt="prize"> -->
                  <div class="prize__imageUrl card-header">
                    imageUrl：<br><input type="text" class="getImageUrl">
                  </div>
                  <div class="card-body">
                    <h5 class="prize__name card-title">
                      name：<br><input type="text" class="getName">
                    </h5>
                    <div class="prize__desc card-text">
                      description：<br><input type="text" class="getDescription">
                    </div>
                    <div class="prize__weight mt-2 card-text">
                      weight：<br><input type="text" class="getWeight">
                    </div>
                    <button type="button" class="prize-post mt-3 btn btn-primary">新增</button>
                  </div>
                </div>
              </div>

              <% for(prize of prizes) { %>
                <div class="col">
                  <div class="prize card">
                    <input type="hidden" class="prize-id" value="<%= prize.id %>">
                    <img src="<%= prize.imageUrl %>" class="prize-image card-img-top" alt="prize-image">
                    <div class="prize__imageUrl card-header">
                      <input type="text" class="imageUrl-input getImageUrl" value="<%= prize.imageUrl %>">
                      <div class="imageUrl-cover" data-content-head="imageUrl：">imageUrl：<%= prize.imageUrl %></div>
                    </div>
                    <div class="card-body">
                      <h5 class="prize__name card-title">
                        <input type="text" class="name-input getName" value="<%= prize.name %>">
                        <div class="name-cover" data-content-head="name：">name：<%= prize.name %></div>
                      </h5>
                      <div class="prize__desc card-text">
                        <input type="text" class="description-input getDescription" value="<%= prize.description %>">
                        <div class="description-cover" data-content-head="description：">description：<%= prize.description %></div>
                      </div>
                      <div class="prize__weight mt-2 card-text">
                        <input type="text" class="weight-input getWeight" value="<%= prize.weight %>">
                        <div class="weight-cover" data-content-head="weight：">weight：<%= prize.weight %></div>
                      </div>
                      <button type="button" class="prize-save mt-3 btn btn-primary">儲存</button>
                      <button type="button" class="prize-delete mt-3 btn btn-danger">刪除</button>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
          <div class="tab-pane fade" id="menu" role="tabpanel" aria-labelledby="menu-tab">BB</div>
          <div class="tab-pane fade" id="faq" role="tabpanel" aria-labelledby="faq-tab">CC</div>
        </div>
      </div>
    </main>

    <%- include('./templates/footer') %> 
  </body>

</html>