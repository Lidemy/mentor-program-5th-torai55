        <button type="button">返回</button>
      </div>

      <div class="loading hide">
        <img src="<%= imagePath %>/Spinner-1s-200px.svg" alt="Loading"/>
        <h6>抽獎中……</h6>
      </div>
    </section>

    <%- include('./templates/footer') %>
